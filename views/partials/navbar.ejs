<header class="header">
    <div class="nav-container">
        <div class="logo">
            <a href="/dashboard" class="logo-link">ðŸ“Š AttendPro</a>
        </div>
                       <nav class="nav-menu">
                   <a href="/dashboard" class="nav-link">Dashboard</a>
                   <a href="/classlist" class="nav-link">Classes</a>
                   <a href="/createclass" class="nav-link">Create Class</a>
               </nav>
        <div class="user-info">
            <% if (user) { %>
                <span class="user-name">Welcome, <%= user.FULLNAME %></span>
                <a href="/logout" class="logout-btn">Logout</a>
            <% } else { %>
                <a href="/login" class="login-btn">Login</a>
                <a href="/register" class="register-btn">Register</a>
            <% } %>
        </div>
    </div>
</header>

<style>
    .header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        padding: 15px 0;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
    }

    .logo-link {
        font-size: 24px;
        font-weight: bold;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .logo-link:hover {
        transform: scale(1.05);
    }

    .nav-menu {
        display: flex;
        gap: 30px;
        align-items: center;
    }

    .nav-link {
        color: #495057;
        text-decoration: none;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
        position: relative;
    }

    .nav-link:hover {
        color: #667eea;
        background: rgba(102, 126, 234, 0.1);
        transform: translateY(-2px);
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 50%;
        width: 0;
        height: 2px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .nav-link:hover::after {
        width: 80%;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .user-name {
        font-weight: 600;
        color: #495057;
        font-size: 14px;
    }

    .logout-btn {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 14px;
    }

    .logout-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
    }

    .login-btn, .register-btn {
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        font-size: 14px;
    }

    .login-btn {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

    .register-btn {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
    }

    .login-btn:hover, .register-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    @media (max-width: 768px) {
        .nav-container {
            flex-direction: column;
            gap: 15px;
        }
        
        .nav-menu {
            gap: 15px;
        }
        
        .user-info {
            flex-direction: column;
            gap: 10px;
        }
    }
</style> 