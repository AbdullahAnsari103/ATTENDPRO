<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Attendance Summary - AttendPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px 0;
        }
        
        .container {
            max-width: 1400px;
        }
        
        .summary-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            text-align: center;
        }
        
        .summary-header h1 {
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }
        
        .summary-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .overall-stats {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            text-align: center;
        }
        
        .overall-stats h3 {
            margin-bottom: 20px;
            font-size: 1.8rem;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .stat-item {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            padding: 15px;
            text-align: center;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            display: block;
        }
        
        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }
        
        .attendance-table {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        
        .table {
            margin: 0;
        }
        
        .table thead th {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 20px 15px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.85rem;
        }
        
        .table tbody td {
            padding: 15px;
            vertical-align: middle;
            border-color: #f8f9fa;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        .percentage-badge {
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .badge-good {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }
        
        .badge-warning {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
            color: white;
        }
        
        .badge-danger {
            background: linear-gradient(135deg, #dc3545, #e83e8c);
            color: white;
        }
        
        .back-btn {
            background: rgba(108, 117, 125, 0.1);
            border: 2px solid #6c757d;
            border-radius: 15px;
            padding: 12px 25px;
            color: #6c757d;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            font-weight: 600;
            margin-bottom: 20px;
        }
        
        .back-btn:hover {
            background: #6c757d;
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
        }
        
        .class-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        
        .action-btn {
            padding: 5px 12px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.8rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-view {
            background: linear-gradient(135deg, #17a2b8, #138496);
            color: white;
        }
        
        .btn-attendance {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }
        
        .btn-report {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
            color: white;
        }
        
        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            color: white;
            text-decoration: none;
        }
        
        .teachers-list {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin-top: 5px;
        }
        
        .teacher-badge {
            background: #e9ecef;
            color: #495057;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .teacher-badge.current {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }
        
        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }
        
        .no-data i {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }
        
        .export-btn {
            background: linear-gradient(135deg, #6f42c1, #e83e8c);
            border: none;
            border-radius: 15px;
            padding: 12px 25px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }
        
        .export-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(111, 66, 193, 0.3);
            color: white;
        }
        
        @media (max-width: 768px) {
            .table-responsive {
                border-radius: 15px;
            }
            
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .summary-header h1 {
                font-size: 2rem;
            }
            
            .class-actions {
                flex-direction: column;
            }
            
            .action-btn {
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container">
        <a href="/dashboard" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        
        <div class="summary-header">
            <h1><i class="fas fa-chalkboard-teacher"></i> Teacher Attendance Summary</h1>
            <p class="lead">Overview of attendance across all your classes</p>
        </div>
        
        <div class="summary-card">
            <!-- Overall Statistics -->
            <div class="overall-stats">
                <h3><i class="fas fa-user-tie"></i> <%= teacherName %>'s Teaching Summary</h3>
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-number"><%= overallPercentage %>%</span>
                        <span class="stat-label">Overall Attendance</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= totalClasses %></span>
                        <span class="stat-label">Classes Teaching</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= totalStudents %></span>
                        <span class="stat-label">Total Students</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= totalPresentInstances %></span>
                        <span class="stat-label">Present Instances</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= totalClassInstances %></span>
                        <span class="stat-label">Total Instances</span>
                    </div>
                </div>
            </div>
            
            <!-- Export Button -->
            <div class="text-end">
                <button class="btn export-btn" onclick="exportToCSV()">
                    <i class="fas fa-download"></i> Export to CSV
                </button>
            </div>
            
            <!-- Class-wise Attendance Table -->
            <% if (attendanceSummary && attendanceSummary.length > 0) { %>
                <h4 style="margin-bottom: 20px; color: #495057;">
                    <i class="fas fa-table"></i> Class-wise Attendance Details
                </h4>
                
                <div class="table-responsive attendance-table">
                    <table class="table table-hover" id="attendanceTable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-chalkboard"></i> Class</th>
                                <th><i class="fas fa-book"></i> Subject</th>
                                <th><i class="fas fa-door-open"></i> Room</th>
                                <th><i class="fas fa-users"></i> Students</th>
                                <th><i class="fas fa-calendar-alt"></i> Class Days</th>
                                <th><i class="fas fa-check-circle"></i> Present</th>
                                <th><i class="fas fa-list-ol"></i> Total Records</th>
                                <th><i class="fas fa-percentage"></i> Attendance %</th>
                                <th><i class="fas fa-flag"></i> Status</th>
                                <th><i class="fas fa-users-cog"></i> Teachers</th>
                                <th><i class="fas fa-cogs"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% attendanceSummary.forEach(summary => { %>
                                <tr>
                                    <td>
                                        <strong><%= summary.className %></strong>
                                    </td>
                                    <td>
                                        <i class="fas fa-graduation-cap"></i> <%= summary.subject %>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">Room <%= summary.roomNo %></span>
                                    </td>
                                    <td>
                                        <strong style="color: #667eea;"><%= summary.totalStudents %></strong>
                                    </td>
                                    <td>
                                        <strong style="color: #28a745;"><%= summary.totalClassDays %></strong>
                                    </td>
                                    <td>
                                        <strong style="color: #28a745;"><%= summary.presentCount %></strong>
                                    </td>
                                    <td>
                                        <strong><%= summary.totalAttendanceRecords %></strong>
                                    </td>
                                    <td>
                                        <span class="percentage-badge badge-<%= summary.status %>">
                                            <%= summary.percentage %>%
                                        </span>
                                    </td>
                                    <td>
                                        <% if (summary.status === 'good') { %>
                                            <span style="color: #28a745;">
                                                <i class="fas fa-check-circle"></i> Excellent
                                            </span>
                                        <% } else if (summary.status === 'warning') { %>
                                            <span style="color: #ffc107;">
                                                <i class="fas fa-exclamation-triangle"></i> Needs Attention
                                            </span>
                                        <% } else { %>
                                            <span style="color: #dc3545;">
                                                <i class="fas fa-times-circle"></i> Critical
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="teachers-list">
                                            <% summary.teachers.forEach(teacher => { %>
                                                <span class="teacher-badge <%= teacher._id.toString() === user._id.toString() ? 'current' : '' %>">
                                                    <%= teacher.NAME %>
                                                </span>
                                            <% }); %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="class-actions">
                                            <a href="/classdetail/<%= summary.classId %>" class="action-btn btn-view">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            <a href="/classdetail/<%= summary.classId %>/attendance-mark" class="action-btn btn-attendance">
                                                <i class="fas fa-check"></i> Mark
                                            </a>
                                            <a href="/classdetail/<%= summary.classId %>/attendance-report" class="action-btn btn-report">
                                                <i class="fas fa-chart-line"></i> Report
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                        <tfoot>
                            <tr style="background: #f8f9fa; font-weight: bold;">
                                <td colspan="5"><strong>OVERALL TOTALS</strong></td>
                                <td><strong style="color: #28a745;"><%= totalPresentInstances %></strong></td>
                                <td><strong><%= totalClassInstances %></strong></td>
                                <td>
                                    <span class="percentage-badge badge-<%= overallStatus %>">
                                        <%= overallPercentage %>%
                                    </span>
                                </td>
                                <td>
                                    <% if (overallStatus === 'good') { %>
                                        <span style="color: #28a745;">
                                            <i class="fas fa-trophy"></i> Excellent
                                        </span>
                                    <% } else if (overallStatus === 'warning') { %>
                                        <span style="color: #ffc107;">
                                            <i class="fas fa-exclamation-triangle"></i> Needs Attention
                                        </span>
                                    <% } else { %>
                                        <span style="color: #dc3545;">
                                            <i class="fas fa-times-circle"></i> Critical
                                        </span>
                                    <% } %>
                                </td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                
                <!-- Attendance Guidelines -->
                <div style="margin-top: 30px; padding: 20px; background: #f8f9fa; border-radius: 15px;">
                    <h5 style="color: #495057; margin-bottom: 15px;">
                        <i class="fas fa-info-circle"></i> Attendance Performance Guidelines
                    </h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div style="padding: 15px; background: linear-gradient(135deg, #28a745, #20c997); color: white; border-radius: 10px; text-align: center; margin-bottom: 10px;">
                                <strong><i class="fas fa-trophy"></i> 75% and above</strong><br>
                                <small>Excellent Class Performance</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div style="padding: 15px; background: linear-gradient(135deg, #ffc107, #fd7e14); color: white; border-radius: 10px; text-align: center; margin-bottom: 10px;">
                                <strong><i class="fas fa-exclamation-triangle"></i> 60% - 74%</strong><br>
                                <small>Needs Attention & Improvement</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div style="padding: 15px; background: linear-gradient(135deg, #dc3545, #e83e8c); color: white; border-radius: 10px; text-align: center; margin-bottom: 10px;">
                                <strong><i class="fas fa-times-circle"></i> Below 60%</strong><br>
                                <small>Critical - Immediate Action Required</small>
                            </div>
                        </div>
                    </div>
                </div>
                
            <% } else { %>
                <div class="no-data">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <h4>No Classes Found</h4>
                    <p>You are not currently teaching any active classes.</p>
                    <a href="/createclass" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Your First Class
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function exportToCSV() {
            const table = document.getElementById('attendanceTable');
            const rows = table.querySelectorAll('tr');
            let csv = [];
            
            // Add header
            csv.push('Teacher Attendance Summary - <%= teacherName %>');
            csv.push('Generated on: ' + new Date().toLocaleDateString());
            csv.push('Overall Attendance: <%= overallPercentage %>%');
            csv.push('');
            
            // Add table headers
            const headers = [];
            const headerCells = rows[0].querySelectorAll('th');
            for (let i = 0; i < headerCells.length - 1; i++) { // Exclude actions column
                headers.push(headerCells[i].textContent.trim().replace(/\s+/g, ' '));
            }
            csv.push(headers.join(','));
            
            // Add table data
            for (let i = 1; i < rows.length - 1; i++) { // Exclude footer
                const row = [];
                const cells = rows[i].querySelectorAll('td');
                for (let j = 0; j < cells.length - 1; j++) { // Exclude actions column
                    let cellText = cells[j].textContent.trim().replace(/\s+/g, ' ');
                    // Handle commas in data
                    if (cellText.includes(',')) {
                        cellText = '"' + cellText + '"';
                    }
                    row.push(cellText);
                }
                csv.push(row.join(','));
            }
            
            // Download CSV
            const csvContent = csv.join('\n');
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'teacher-attendance-summary-<%= teacherName.replace(/\s+/g, "-") %>-' + new Date().toISOString().split('T')[0] + '.csv';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }
    </script>
</body>
</html>