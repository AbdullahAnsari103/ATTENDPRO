# ==============================================
# AttendPro Environment Configuration Template
# ==============================================
# Copy this file to .env and configure for your environment

# ==============================================
# Application Environment
# ==============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ==============================================
# Database Configuration
# ==============================================
# Production MongoDB URI (REQUIRED in production)
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/attendpro

# ==============================================
# Security Configuration
# ==============================================
# Cryptographically strong session secret (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-super-secure-64-character-session-secret-here

# Trust proxy (set to true behind reverse proxy like Nginx, Cloudflare)
TRUST_PROXY=true

# Force HTTPS redirects
FORCE_HTTPS=true

# Secure cookies (auto-enabled in production)
SECURE_COOKIES=true

# ==============================================
# Application URLs
# ==============================================
# Your production domain
BASE_URL=https://your-domain.com

# ==============================================
# Rate Limiting
# ==============================================
# Rate limiting window (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Authentication attempts limit
AUTH_RATE_LIMIT_MAX=5

# Admin access attempts limit
ADMIN_RATE_LIMIT_MAX=3

# ==============================================
# Logging Configuration
# ==============================================
# Logging level: error, warn, info, debug
LOG_LEVEL=warn

# Log to file (recommended for production)
LOG_TO_FILE=true

# Log directory path (optional)
LOG_DIR=./logs

# ==============================================
# File Handling
# ==============================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=./uploads

# Maximum request body size
MAX_REQUEST_SIZE=10mb

# ==============================================
# Email Configuration (Optional)
# ==============================================
# SMTP server details for email notifications
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@your-domain.com

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable public registration
ENABLE_REGISTRATION=false

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Enable QR code generation
ENABLE_QR_CODE_GENERATION=true

# Enable bulk operations
ENABLE_BULK_OPERATIONS=true

# ==============================================
# Performance Settings
# ==============================================
# Enable gzip compression
ENABLE_COMPRESSION=true

# Cache static files
CACHE_STATIC_FILES=true

# ==============================================
# Database Maintenance
# ==============================================
# Enable automatic database maintenance
DB_MAINTENANCE_ENABLED=true

# Maintenance interval (in milliseconds)
DB_MAINTENANCE_INTERVAL=86400000

# ==============================================
# Emergency Admin Configuration (Optional)
# ==============================================
# Emergency admin credentials for initial setup
# IMPORTANT: Remove these after creating your admin user
EMERGENCY_ADMIN_USERNAME=emergency_admin
EMERGENCY_ADMIN_PASSWORD=secure-emergency-password-123
EMERGENCY_ADMIN_EMAIL=admin@your-domain.com
EMERGENCY_ADMIN_FULLNAME=Emergency Administrator
EMERGENCY_SECRET=your-emergency-secret-code

# ==============================================
# CORS Configuration (Optional)
# ==============================================
# Enable CORS (usually not needed in production)
ENABLE_CORS=false

# CORS allowed origins
CORS_ORIGIN=https://your-domain.com

# ==============================================
# Development Settings
# ==============================================
# Enable debug mode (auto-enabled in development)
ENABLE_DEBUG=false
